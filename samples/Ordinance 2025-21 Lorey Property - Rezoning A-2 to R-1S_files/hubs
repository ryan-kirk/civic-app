/// <reference path="..\..\SignalR.Client.JS\Scripts\jquery-1.6.4.js" />
/// <reference path="jquery.signalR.js" />
(function ($, window, undefined) {
    /// <param name="$" type="jQuery" />
    "use strict";

    if (typeof ($.signalR) !== "function") {
        throw new Error("SignalR: SignalR is not loaded. Please ensure jquery.signalR-x.js is referenced before ~/signalr/js.");
    }

    var signalR = $.signalR;

    function makeProxyCallback(hub, callback) {
        return function () {
            // Call the client hub method
            callback.apply(hub, $.makeArray(arguments));
        };
    }

    function registerHubProxies(instance, shouldSubscribe) {
        var key, hub, memberKey, memberValue, subscriptionMethod;

        for (key in instance) {
            if (instance.hasOwnProperty(key)) {
                hub = instance[key];

                if (!(hub.hubName)) {
                    // Not a client hub
                    continue;
                }

                if (shouldSubscribe) {
                    // We want to subscribe to the hub events
                    subscriptionMethod = hub.on;
                } else {
                    // We want to unsubscribe from the hub events
                    subscriptionMethod = hub.off;
                }

                // Loop through all members on the hub and find client hub functions to subscribe/unsubscribe
                for (memberKey in hub.client) {
                    if (hub.client.hasOwnProperty(memberKey)) {
                        memberValue = hub.client[memberKey];

                        if (!$.isFunction(memberValue)) {
                            // Not a client hub function
                            continue;
                        }

                        // Use the actual user-provided callback as the "identity" value for the registration.
                        subscriptionMethod.call(hub, memberKey, makeProxyCallback(hub, memberValue), memberValue);
                    }
                }
            }
        }
    }

    $.hubConnection.prototype.createHubProxies = function () {
        var proxies = {};
        this.starting(function () {
            // Register the hub proxies as subscribed
            // (instance, shouldSubscribe)
            registerHubProxies(proxies, true);

            this._registerSubscribedHubs();
        }).disconnected(function () {
            // Unsubscribe all hub proxies when we "disconnect".  This is to ensure that we do not re-add functional call backs.
            // (instance, shouldSubscribe)
            registerHubProxies(proxies, false);
        });

        proxies['concurrentEditHub'] = this.createHubProxy('concurrentEditHub'); 
        proxies['concurrentEditHub'].client = { };
        proxies['concurrentEditHub'].server = {
            announceMeetingEditor: function (meetingId, joined) {
                return proxies['concurrentEditHub'].invoke.apply(proxies['concurrentEditHub'], $.merge(["AnnounceMeetingEditor"], $.makeArray(arguments)));
             },

            sendMessage: function (meetingId, message) {
                return proxies['concurrentEditHub'].invoke.apply(proxies['concurrentEditHub'], $.merge(["SendMessage"], $.makeArray(arguments)));
             },

            updateEditorVoting: function (meetingId, userId, resolutionId, vote) {
                return proxies['concurrentEditHub'].invoke.apply(proxies['concurrentEditHub'], $.merge(["UpdateEditorVoting"], $.makeArray(arguments)));
             }
        };

        proxies['concurrentEditorsHub'] = this.createHubProxy('concurrentEditorsHub'); 
        proxies['concurrentEditorsHub'].client = { };
        proxies['concurrentEditorsHub'].server = {
            announceEditor: function (editGroupId, joined) {
                return proxies['concurrentEditorsHub'].invoke.apply(proxies['concurrentEditorsHub'], $.merge(["AnnounceEditor"], $.makeArray(arguments)));
             },

            removeEditor: function (editGroupId) {
                return proxies['concurrentEditorsHub'].invoke.apply(proxies['concurrentEditorsHub'], $.merge(["RemoveEditor"], $.makeArray(arguments)));
             },

            sendMessage: function (editGroupId, message) {
                return proxies['concurrentEditorsHub'].invoke.apply(proxies['concurrentEditorsHub'], $.merge(["SendMessage"], $.makeArray(arguments)));
             }
        };

        proxies['concurrentItemEditHub'] = this.createHubProxy('concurrentItemEditHub'); 
        proxies['concurrentItemEditHub'].client = { };
        proxies['concurrentItemEditHub'].server = {
            announceItemEditor: function (itemId, joined) {
                return proxies['concurrentItemEditHub'].invoke.apply(proxies['concurrentItemEditHub'], $.merge(["AnnounceItemEditor"], $.makeArray(arguments)));
             },

            sendMessage: function (itemId, message) {
                return proxies['concurrentItemEditHub'].invoke.apply(proxies['concurrentItemEditHub'], $.merge(["SendMessage"], $.makeArray(arguments)));
             },

            shareEdits: function (itemId, edits) {
                return proxies['concurrentItemEditHub'].invoke.apply(proxies['concurrentItemEditHub'], $.merge(["ShareEdits"], $.makeArray(arguments)));
             },

            shareFocus: function (itemId, focus) {
                return proxies['concurrentItemEditHub'].invoke.apply(proxies['concurrentItemEditHub'], $.merge(["ShareFocus"], $.makeArray(arguments)));
             }
        };

        proxies['meetingControlPanelHub'] = this.createHubProxy('meetingControlPanelHub'); 
        proxies['meetingControlPanelHub'].client = { };
        proxies['meetingControlPanelHub'].server = {
            addUserToMCPViewers: function (meetingId, joined) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["AddUserToMCPViewers"], $.makeArray(arguments)));
             },

            clearPosition: function (meetingId) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["ClearPosition"], $.makeArray(arguments)));
             },

            getMeetingControlPanelViewGroupName: function (meetingId) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["GetMeetingControlPanelViewGroupName"], $.makeArray(arguments)));
             },

            getMeetingEditGroupName: function (meetingId) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["GetMeetingEditGroupName"], $.makeArray(arguments)));
             },

            updatePosition: function (meetingId, itemId, itemType) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["UpdatePosition"], $.makeArray(arguments)));
             },

            updatePositionFromAgenda: function (meetingId, itemId) {
                return proxies['meetingControlPanelHub'].invoke.apply(proxies['meetingControlPanelHub'], $.merge(["UpdatePositionFromAgenda"], $.makeArray(arguments)));
             }
        };

        proxies['progressHub'] = this.createHubProxy('progressHub'); 
        proxies['progressHub'].client = { };
        proxies['progressHub'].server = {
            announceProgress: function (guid, percentage, message) {
                return proxies['progressHub'].invoke.apply(proxies['progressHub'], $.merge(["AnnounceProgress"], $.makeArray(arguments)));
             },

            registerProgressGuid: function (guid) {
                return proxies['progressHub'].invoke.apply(proxies['progressHub'], $.merge(["RegisterProgressGuid"], $.makeArray(arguments)));
             }
        };

        proxies['requestToSpeakHub'] = this.createHubProxy('requestToSpeakHub'); 
        proxies['requestToSpeakHub'].client = { };
        proxies['requestToSpeakHub'].server = {
            addUserToRtSViewers: function (meetingId, joined) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["AddUserToRtSViewers"], $.makeArray(arguments)));
             },

            cancelRequest: function (meetingId, userId) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["CancelRequest"], $.makeArray(arguments)));
             },

            getRequestToSpeakViewGroupName: function (meetingId) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["GetRequestToSpeakViewGroupName"], $.makeArray(arguments)));
             },

            newRequest: function (meetingId, userId) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["NewRequest"], $.makeArray(arguments)));
             },

            startTimer: function (meetingId, time) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["StartTimer"], $.makeArray(arguments)));
             },

            updateRequest: function (meetingId, userId, status) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["UpdateRequest"], $.makeArray(arguments)));
             },

            updateTimer: function (meetingId, action) {
                return proxies['requestToSpeakHub'].invoke.apply(proxies['requestToSpeakHub'], $.merge(["UpdateTimer"], $.makeArray(arguments)));
             }
        };

        proxies['votingHub'] = this.createHubProxy('votingHub'); 
        proxies['votingHub'].client = { };
        proxies['votingHub'].server = {
            addUserToDocumentViewers: function (meetingId) {
                return proxies['votingHub'].invoke.apply(proxies['votingHub'], $.merge(["AddUserToDocumentViewers"], $.makeArray(arguments)));
             },

            getDocumentViewGroupName: function (meetingId) {
                return proxies['votingHub'].invoke.apply(proxies['votingHub'], $.merge(["GetDocumentViewGroupName"], $.makeArray(arguments)));
             },

            getMeetingEditGroupName: function (meetingId) {
                return proxies['votingHub'].invoke.apply(proxies['votingHub'], $.merge(["GetMeetingEditGroupName"], $.makeArray(arguments)));
             },

            showResults: function (meetingId, itemId) {
                return proxies['votingHub'].invoke.apply(proxies['votingHub'], $.merge(["ShowResults"], $.makeArray(arguments)));
             }
        };

        return proxies;
    };

    signalR.hub = $.hubConnection("/signalr", { useDefaultPath: false });
    $.extend(signalR, signalR.hub.createHubProxies());

}(window.jQuery, window));
